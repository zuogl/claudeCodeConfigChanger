{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node"
  },
  "include": [
    "lib/**/*",
    "bin/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test.js",
    "demo-script.js"
  ]
}